//C++

//Recursive Code
class Solution {
public:
    double nthPersonGetsNthSeat(int n) {
        if(n==1)
            return 1.0;
        
        double break_cycle = 1.0/n;
        double neither_1st_nor_last = (n-2.0)/n;
        return break_cycle + neither_1st_nor_last * nthPersonGetsNthSeat(n-1);
    }
};

//After Proof by induction
class Solution {
public:
    double nthPersonGetsNthSeat(int n) {
        return n==1?n:0.5;
    }
};

//Java

class Solution {
    public double nthPersonGetsNthSeat(int n) {
        if (n == 1)
            return 1.0;

        double break_cycle = 1.0 / n;
        double neither_1st_nor_last = (n - 2.0) / n;

        return break_cycle + neither_1st_nor_last * nthPersonGetsNthSeat(n - 1);
    }
}


#Python

class Solution:
    def nthPersonGetsNthSeat(self, n: int) -> float:
        if n == 1:
            return 1.0
        
        break_cycle = 1.0 / n
        neither_1st_nor_last = (n - 2.0) / n
        
        return break_cycle + neither_1st_nor_last * self.nthPersonGetsNthSeat(n - 1)
